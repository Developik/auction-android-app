<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.srsys">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="comp3350.srsys.presentation.FeedActivity"
            android:label="@string/item_title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.srsys.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="comp3350.srsys.presentation.ProductActivity"
            android:label="@string/item_title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.srsys.presentation.FeedActivity" />
        </activity>

    </application>

</manifest>
